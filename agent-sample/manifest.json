{
  "manifest_version": 3,
  "name": "Remote Code Execution Demo",
  "version": "1.0",
  "permissions": ["offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
"sandbox": {
    "pages": ["sandbox.html"]
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-eval' blob:; object-src 'self'"
  }
}